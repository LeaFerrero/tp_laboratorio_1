#include <stdio.h>
#include <stdlib.h>

int validarEnteroMenor(int numero, int aComparar)
{
	int retorno;

	retorno = 1;

	if(numero < aComparar)
	{
		retorno = 0;
	}

	return retorno;
}

char validarLetraSN(char letra)
{
	char retorno;

	retorno = 1;

	if(letra != 's' && letra != 'n')
	{
		retorno = 0;
		break;
	}

	return retorno;
}
