#include <stdio.h>
#include <stdlib.h>

float pedirFlotante(char mensaje[])
{
	float numero;
	printf("%s", mensaje);
	scanf("%s", &numero);
	return numero;
}

char pedirLetra(char mensaje[])
{
	char letra;
	printf("%s", mensaje);
	fflush(stdin);
	scanf("%c", &letra);
	return letra;
}

