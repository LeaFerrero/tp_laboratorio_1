#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include "validaciones.h"

/// @fn float pedirFlotante(char[])
/// @brief Pide un numero flotante al usuario y lo retorna.
///
/// @param mensaje Es el mensaje a ser mostrado.
/// @return El numero flotante ingresado.
float pedirFlotante(char mensaje[])
{
	float numero;
	printf("%s", mensaje);
	scanf("%f", &numero);
	return numero;
}

/// @fn char pedirLetra(char[])
/// @brief Pide una letra al usuario, la pasa a ma la retorna.
///
/// @param mensaje El mensaje a ser mostrado-
/// @return La letra ingresada
char pedirLetra(char mensaje[])
{
	char letra;
	printf("%s", mensaje);
	fflush(stdin);
	scanf("%c", &letra);
	letra = toupper(letra);
	return letra;
}

float reingresarFlotante(float numero, int comparante, char mensajeUno[], char mensajeDos[])
{
	while(validarEsMayor(numero, comparante) == 0)
	{
		printf("%s", mensajeUno);
		numero = pedirFlotante(mensajeDos);
	}
	return numero;
}

/// @fn char reingresarChar(char, char, char, char[], char[])
/// @brief
///
/// @param letraA
/// @param letraB
/// @param letraC
/// @param mensajeUno
/// @param mensajeDos
/// @return
char reingresarChar(char letra, char comparanteA, char comparanteB, char mensajeUno[], char mensajeDos[])
{
	while(validarLetra(letra, comparanteA, comparanteB) == 0)
	{
		printf("%s", mensajeUno);
		letra = pedirLetra(mensajeDos);
		letra = toupper(letra);
	}
	return letra;
}
